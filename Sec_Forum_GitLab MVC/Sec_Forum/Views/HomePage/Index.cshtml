<html>

<style>
    .project-details {
        display: flex;
    }

    .profile-image {
        height: 50px;
        width: 50px;
    }
    .Project-image{
        height: 80px;
        width:60px;
    }

    .project-content {
        margin-left: 10px;
    }

    .project-title {
        margin-bottom: 0;
    }

    .designation {
        color: #888;
    }

    .reply-box {
        display: none;
    }

    .comments-section {
        margin-top: 20px;
    }

    .comment {
        margin-bottom: 10px;
        padding: 10px;
        background-color: #f5f5f5;
    }

        .comment p {
            margin-bottom: 5px;
        }

    .reply-form {
        margin-top: 10px;
    }


    .createdDate {
        font-size: smaller;
        color: gray;
    }

    .pointer {
        cursor: pointer;
    }
</style>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $(".comment-link").click(function () {
            var commentBox = $(this).closest('.project').find('.comment-box');
            commentBox.toggle();
        });

        $(".reply-link").click(function () {
            var replyBox = $(this).closest('.comment').find('.reply-box');
            replyBox.toggle();
        });
    });
</script>

<div style="clear: both;"></div>

