@model IEnumerable<Sec_Forum.Models.ResultModel>
@using System.IO
@using Microsoft.AspNetCore.Mvc.Rendering


@{
    ViewData["Title"] = "Index";
}
<script src="~/lib/jquery/dist/jquery.min.js"></script>
